@{
    ViewData["Title"] = "Login";
}

<div class="page-container auth-container">
    <div class="container">
        <div class="auth-card">
            <h1>Welcome Back</h1>
            <p>Login to access your dashboard</p>
            
            @if (ViewBag.Error != null)
            {
                <div class="alert alert-error">@ViewBag.Error</div>
            }

            <form method="post" class="auth-form">
                <div class="form-group">
                    <label>Email</label>
                    <input type="email" name="email" class="form-control" required />
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input type="password" name="password" class="form-control" required />
                </div>
                <button type="submit" class="btn-primary btn-block">Login</button>
            </form>

            <p class="auth-switch">
                Don't have an account? <a href="/Account/Signup">Sign up here</a>
            </p>
        </div>
    </div>
</div>

<style>
    .auth-container { display: flex; align-items: center; min-height: 70vh; }
    .auth-card { max-width: 400px; margin: 0 auto; background: white; padding: 40px; border-radius: 10px; box-shadow: 0 4px 6px rgba(0,0,0,0.1); }
    .auth-form { margin-top: 30px; }
    .form-group { margin-bottom: 20px; }
    .form-control { width: 100%; padding: 12px; border: 1px solid #ddd; border-radius: 5px; }
    .btn-block { width: 100%; }
    .auth-switch { text-align: center; margin-top: 20px; }
    .alert-error { background: #fee; color: #c00; padding: 12px; border-radius: 5px; margin-bottom: 20px; }
</style>

