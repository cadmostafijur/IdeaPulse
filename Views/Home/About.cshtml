@{
    ViewData["Title"] = "About";
}

<div class="page-container">
    <div class="container">
        <h1>About IdeaPulse</h1>
        
        <div class="about-content">
            <section class="about-section">
                <h2>Our Mission</h2>
                <p>Empowering entrepreneurs with instant market insights to make data-driven decisions and build successful startups.</p>
            </section>

            <section class="about-section">
                <h2>Technology Stack</h2>
                <div class="tech-grid">
                    <div class="tech-item">ASP.NET Core</div>
                    <div class="tech-item">PostgreSQL (Neon DB)</div>
                    <div class="tech-item">OpenAI GPT API</div>
                    <div class="tech-item">QuestPDF</div>
                    <div class="tech-item">Razor Pages</div>
                    <div class="tech-item">Chart.js</div>
                </div>
            </section>

            <section class="about-section">
                <h2>How We Help</h2>
                <ul>
                    <li>✅ Instant market validation for your startup idea</li>
                    <li>✅ AI-powered competitive analysis</li>
                    <li>✅ Detailed industry insights and trends</li>
                    <li>✅ Downloadable PDF reports for investors</li>
                    <li>✅ Track all your validated ideas in one dashboard</li>
                </ul>
            </section>

            <section class="about-section">
                <h2>Developer Credits</h2>
                <p>Built with ❤️ using modern web technologies and AI integration.</p>
            </section>
        </div>
    </div>
</div>

<style>
    .page-container { padding: 80px 0; }
    .about-content { max-width: 900px; margin: 0 auto; }
    .about-section { margin-bottom: 40px; }
    .about-section h2 { color: #008080; margin-bottom: 20px; }
    .tech-grid { display: grid; grid-template-columns: repeat(3, 1fr); gap: 15px; margin-top: 20px; }
    .tech-item { padding: 15px; background: #f5f5f5; text-align: center; border-radius: 8px; }
    ul { list-style: none; padding: 0; }
    ul li { padding: 8px 0; }
</style>

