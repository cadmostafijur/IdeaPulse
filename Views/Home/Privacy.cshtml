@{
    ViewData["Title"] = "Privacy Policy";
}

<div class="page-container">
    <div class="container">
        <h1>Privacy Policy</h1>
        <p class="last-updated">Last Updated: @DateTime.Now.ToString("MMMM dd, yyyy")</p>
        
        <div class="legal-content">
            <section>
                <h2>1. Information We Collect</h2>
                <p>We collect information you provide directly to us, including your name, email address, and startup ideas.</p>
            </section>

            <section>
                <h2>2. How We Use Your Information</h2>
                <p>We use your information to provide AI-powered analysis services, improve our platform, and communicate with you.</p>
            </section>

            <section>
                <h2>3. Data Security</h2>
                <p>We implement appropriate security measures to protect your personal information.</p>
            </section>

            <section>
                <h2>4. Your Rights</h2>
                <p>You have the right to access, update, or delete your personal information at any time.</p>
            </section>
        </div>
    </div>
</div>

<style>
    .legal-content section { margin-bottom: 30px; }
    .last-updated { color: #666; font-size: 14px; }
</style>

